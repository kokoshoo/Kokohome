@model Decks.Flashcard


@using (Html.BeginForm("CreateFlashcard","Decks"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Add Flashcard</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CardFront, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CardFront, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CardFront, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CardBack, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CardBack, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CardBack, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <input class="form-control text-box hidden" id="DeckId" name="DeckId" type="text" value="@ViewData["DeckId"]">
        </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>



}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
